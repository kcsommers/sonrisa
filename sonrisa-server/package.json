  "scripts": {
    "tsc": "tsc",
    "watch-tsc": "NODE_ENV=devolopment tsc -w",
    "deploy": "NODE_ENV=production node dist/server.js",
    "watch-deploy": "NODE_ENV=development nodemon dist/server.js",
    "server": "concurrently \"npm run watch-tsc\" \"npm run watch-deploy\"",
    "start": "npm run deploy",
    "heroku-postbuild": "npm run tsc",
    "email": "node dist/src/email.js"
  },
