    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "googleapis": "^39.2.0",
    "gravatar": "^1.8.0",
    "http-status-codes": "^1.3.2",
    "json-bigint": "^1.0.0",
    "nodemailer": "^6.6.2",
    "request": "^2.88.0",
    "square": "^12.0.0",
    "typescript": "^3.4.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/express": "^4.16.1",
