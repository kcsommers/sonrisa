{
  "name": "@sonrisa/server",
  "version": "0.1.0",
  "description": "Server and rest api for Sonrisa Donuts",
  "author": "M Kacy Sommers",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production tsc",
    "watch": "NODE_ENV=development tsc -w",
    "deploy": "NODE_ENV=production node dist/server.js",
    "watch-deploy": "NODE_ENV=development nodemon dist/server.js",
    "watch:windows": "SET NODE_ENV=devolopment&& tsc -w",
    "deploy:windows": "SET NODE_ENV=production&& node dist/server.js",
    "watch-deploy:windows": "SET NODE_ENV=development&& nodemon dist/server.js",
    "server": "concurrently \"yarn run watch\" \"yarn run watch-deploy\"",
    "server:windows": "concurrently \"yarn run watch:windows\" \"yarn run watch-deploy:windows\"",
    "start": "yarn run deploy",
    "heroku-postbuild": "yarn run build",
    "email": "node dist/src/email.js"
  },
  "dependencies": {
    "@sonrisa/core": "0.1.0",
    "axios": "^0.26.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "googleapis": "^39.2.0",
    "gravatar": "^1.8.0",
    "http-status-codes": "^1.3.2",
    "json-bigint": "^1.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.2.7",
    "nodemailer": "^6.6.2",
    "request": "^2.88.0",
    "square": "^12.0.0",
    "tslint": "^6.1.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/config": "0.0.34",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.16.1",
    "@types/gapi": "0.0.39",
    "@types/gravatar": "^1.8.0",
    "@types/lodash": "^4.14.171",
    "@types/mongodb": "^4.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/nodemailer": "^6.4.2",
    "@types/uuid": "^8.3.0",
    "concurrently": "^4.1.0",
    "nodemon": "^1.19.0",
    "typescript": "^4.9.4"
  }
}
